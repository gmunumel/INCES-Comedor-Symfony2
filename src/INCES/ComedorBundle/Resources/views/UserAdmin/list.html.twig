                    <a href="{{ app.request.uriForPath('/#!/admin/') }}{{ entity.id }}/show"><img src="{{ asset('img/show.ico') }}" height="30" width="30" /></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

