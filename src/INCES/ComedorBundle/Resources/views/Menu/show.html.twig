{# src/INCES/ComedorBundle/Resources/views/Menu/show.html.twig #}
{#
{% extends '::base.html.twig' %}

{% block body %}
#}
<h1>Menu</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Seco</th>
            <td>{{ entity.seco }}</td>
        </tr>
        <tr>
            <th>Sopa</th>
            <td>{{ entity.sopa }}</td>
        </tr>
        <tr>
            <th>Dia</th>
            <td>{{ entity.dia|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('menu') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('menu_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('menu_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{#
{% endblock %}
#}
