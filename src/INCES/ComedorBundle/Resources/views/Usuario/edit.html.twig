
<div id="my-col-text">

    <h1>Editar Usuario</h1>

    <form class="usuario_form generic" action="{{ app.request.uriForPath('/usuario/') }}{{ entity.id }}/update" method="post" {{ form_enctype(edit_form) }}>
        {#
        {{ form_widget(edit_form) }}
        <p>
        <button type="submit">Modificar</button>
        </p>
        #}
        {{ form_row(edit_form._token) }}

        <div id="usuario-nombre-block" class="field">
            <label for="nombre">Nombre</label>
            {{ form_widget(edit_form.nombre,  { 'attr': {'class': 'text'}}) }}
        </div>
        <div id="usuario-apellido-block" class="field">
            <label for="apellido">Apellido</label>
            {{ form_widget(edit_form.apellido,  { 'attr': {'class': 'text'}}) }}
        </div>
        <div id="usuario-cedula-block" class="field">
            <label for="cedula">Cédula</label>
            {{ form_widget(edit_form.cedula,  { 'attr': {'class': 'text'}}) }}
        </div>
        <div id="usuario-ncarnet-block" class="field">
            <label for="ncarnet">Número de Carnet</label>
            {{ form_widget(edit_form.ncarnet,  { 'attr': {'class': 'text'}}) }}
        </div>
        <div id="usuario-correo-block" class="field">
            <label for="correo">Correo</label>
            {{ form_widget(edit_form.correo,  { 'attr': {'class': 'text'}}) }}
        </div>
        <div id="usuario-image-block" class="field">
            <label for="image">Imagen</label>
            {{ form_widget(edit_form.image,  { 'attr': {'class': 'text'}}) }}
        </div>
        <div class="action">
            <input id="login-submit" class="submit-button" type="submit" value="Modificar" />
        </div>
