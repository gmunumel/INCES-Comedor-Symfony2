    <ul class="record_actions">
        <li>
        <a href="{{ app.request.uriForPath('/#!/usuario/') }}">
            Regresar a la lista
        </a>
        </li>
        <li>
        <form class="generic" action="{{ app.request.uriForPath('/usuario/') }}{{ entity.id }}/delete" method="post">
            {{ form_widget(delete_form) }}
            {#
            <button class="delete_form_btn" type="submit">Borrar</button>
            #}
            <div class="action">
                <input id="login-submit" class="delete_form_btn submit-button" type="submit" value="Borrar" />
            </div>
        </form>
        </li>
